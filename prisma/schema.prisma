generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id
  slug        String    @unique
  name        String
  description String
  category    String
  style       String
  rating      Float
  heroImage   String
  limited     Boolean   @default(false)
  variants    Variant[]
  reviews     Review[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Variant {
  id        String  @id
  name      String
  abv       Float
  ibu       Int
  packSize  Int
  price     Int
  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model Bundle {
  id          String @id
  slug        String @unique
  name        String
  description String
  price       Int
  savings     Int
  image       String
  items       BundleItem[]
}

model BundleItem {
  id        String  @id @default(cuid())
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  productId String
  bundle    Bundle  @relation(fields: [bundleId], references: [id])
  bundleId  String
}

model Category {
  id    String   @id
  name  String   @unique
  slug  String   @unique
  products Product[]
}

model Review {
  id        String   @id
  rating    Int
  comment   String
  author    String
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())
}

model Store {
  id            String   @id
  slug          String   @unique
  name          String
  address       String
  latitude      Float
  longitude     Float
  petFriendly   Boolean  @default(false)
  kitchen       Boolean  @default(false)
  events        Boolean  @default(false)
  hours         String
  menuUrl       String?
  upcomingEvents Event[]
}

model Event {
  id        String   @id
  title     String
  date      DateTime
  store     Store    @relation(fields: [storeId], references: [id])
  storeId   String
}

model User {
  id          String         @id
  email       String         @unique
  name        String?
  password    String?
  addresses   Address[]
  orders      Order[]
  loyalty     LoyaltyLedger[]
  subscriptions Subscription[]
}

model Address {
  id        String @id
  label     String
  street    String
  city      String
  country   String
  postal    String
  user      User   @relation(fields: [userId], references: [id])
  userId    String
}

model Order {
  id        String      @id
  number    String      @unique
  user      User?       @relation(fields: [userId], references: [id])
  userId    String?
  total     Int
  status    String
  items     OrderItem[]
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        String @id
  name      String
  quantity  Int
  price     Int
  order     Order  @relation(fields: [orderId], references: [id])
  orderId   String
}

model Subscription {
  id        String   @id
  plan      String
  status    String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model GiftCard {
  id        String @id
  code      String @unique
  amount    Int
  balance   Int
  active    Boolean @default(true)
}

model LoyaltyLedger {
  id        String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  points    Int
  reason    String
  createdAt DateTime @default(now())
}

model ContentPost {
  id        String   @id
  slug      String   @unique
  title     String
  excerpt   String
  body      String
  tags      String
  category  String
  published DateTime
}
